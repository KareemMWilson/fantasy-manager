datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  team      Team?
}

model Team {
  id        String     @id @default(uuid())
  name      String?
  budget    Int      @default(5000000)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id])
  userId    String     @unique
  players   Player[]   @relation("TeamPlayers")
  transfers  Transfer[]
}

model Player {
  id        String    @id @default(uuid())
  name      String
  position  Position
  club      String
  isInTransfer Boolean @default(false)
  value     Int       @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  teams     Team[]    @relation("TeamPlayers")
  transfers  Transfer[]
}

model Transfer {
  id          String         @id @default(uuid())
  player      Player         @relation(fields: [playerId], references: [id])
  playerId    String         @unique
  askingPrice Int
  status      TransferStatus @default(LISTED)
  listedAt    DateTime       @default(now())
  soldAt      DateTime?
  seller      Team         @relation(fields: [sellerId], references: [id])
  sellerId    String
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

enum Position {
  GOALKEEPER
  DEFENDER
  MIDFIELDER
  ATTACKER
}

enum TransferStatus {
  LISTED
  SOLD
  CANCELED
}
